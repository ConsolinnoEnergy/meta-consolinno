[system]
compatible=${MACHINE}
bootloader=barebox
mountprefix=/run/mnt/rauc
data-directory=/srv/.rauc

#[handlers]
#pre-install=/lib/rauc/pre-install

[keyring]
path=ca.cert.pem

[slot.rootfs.0]
device=/dev/vg00/system-A
type=ext4
bootname=system0
resize=true

[slot.rootfs.1]
device=/dev/vg00/system-B
type=ext4
bootname=system1
resize=true

[slot.fitimage.0]
device=/boot/system-A.fit
type=raw
parent=rootfs.0

[slot.fitimage.1]
device=/boot/system-B.fit
type=raw
parent=rootfs.1
